{
	"version": "0.0.0",
	"name": "proofood",
	"manifest_version": 2,
	"description": "proofood chrome extension",
	"browser_action": {
		"default_title": "Proofood",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches" : [ "https://icook.tw/recipes/*" ],
			"js": [ "content.js" ]
		}
	],
	"background": {
		"scripts": [ "background.js" ],
		"persistent": false
	},
	"permissions": [ "contextMenus", "tabs", "https://icook.tw/recipes/*" ],
	"content_security_policy": "default-src 'self'; script-src 'self' https://ajax.googleapis.com 'unsafe-eval'; style-src * 'unsafe-inline';"
}