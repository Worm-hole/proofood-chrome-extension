{
	"version": "1.0.1",
	"name": "proofood",
	"manifest_version": 2,
	"description": "proofood chrome extension",
	"browser_action": {
		"default_title": "Proofood",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "img/proofood-icon-16.png",
		"48": "img/proofood-icon-48.png",
		"128": "img/proofood-icon-128.png",
		"scalable": "proofood-icon-large.svg"
	},
	"content_scripts": [
		{
			"matches" : [ "*://icook.tw/recipes/*" ],
			"js": [ "content.js" ]
		}
	],
	"background": {
		"scripts": [ "background.js" ],
		"persistent": false
	},
	"permissions": [ "contextMenus", "tabs", "*://icook.tw/recipes/*", "https://proofood.herokuapp.com/*" ],
	"content_security_policy": "default-src 'self'; script-src 'self' https://ajax.googleapis.com 'unsafe-eval'; connect-src https://proofood.herokuapp.com; style-src * 'unsafe-inline';"
}